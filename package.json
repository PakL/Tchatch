{
	"name": "Tchatch",
	"description": "Twitch.tv chat client build with JavaScript",
	"version": "0.6.1",
	"author": "Pascal Pohl <pakl@paklweb.de>",
	"bugs": "https://github.com/PakL/Tchatch/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/PakL/Tchatch.git"
	},
	"dependencies": {
		"websocket": "=1.0.19",
		"randexp": "=0.4.0"
	},

	"main": "index.html",
	"single-instance": false,
	"webkit": {
		"plugin": true
	},
	"window": {
		"title": "Tchatch",
		"icon": "icon.png",
		"toolbar": true,
		"width": 860,
		"height": 600
	},
	"platformOverrides": {
		"win": { "window": { "toolbar": false }},
		"osx": { "window": { "toolbar": false }},
		"linux": { "window": { "toolbar": false }}
	}
}
